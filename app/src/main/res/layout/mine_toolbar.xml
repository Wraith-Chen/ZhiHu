<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp">

    <Button
        android:id="@+id/mine_scan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/mine_scan"
        android:visibility="visible"
        app:backgroundTint="#575757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mine_toolbar_search"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/home_title_search"
        android:drawableLeft="@mipmap/home_title_search"
        android:fontFamily="cursive"
        android:gravity="center_vertical"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:stateListAnimator="@null"
        android:text="搜索知乎内容"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#656565"
        android:textSize="16sp"
        app:backgroundTint="#FAF9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/mine_scan"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#FFFFFF" />

    <Button
        android:id="@+id/mine_toolbar_change"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/mine_toolbar_change"
        app:backgroundTint="#515151"
        app:layout_constraintStart_toEndOf="@+id/mine_toolbar_search"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/mine_toolbar_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/mine_toolbar_setting"
        app:backgroundTint="#515151"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>